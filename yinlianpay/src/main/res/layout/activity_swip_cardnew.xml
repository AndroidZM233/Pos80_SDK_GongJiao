<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:background="#f5f2f2">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="65dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:id="@+id/layout_cradtips"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"

            >
            <TextView
                android:paddingLeft="6dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:id="@+id/tv_cardtips"
                android:textSize="26sp"
                android:layout_width="fill_parent"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:text="1234567890123456789"
                android:textAlignment="gravity" />
        </LinearLayout>
        <LinearLayout
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
           android:layout_marginTop="10dp"
            android:id="@+id/layout_cradno"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            >
            <TextView

                android:textSize="24sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No："
                />
            <TextView
                android:paddingLeft="6dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:id="@+id/tv_cardNo"
                android:textSize="26sp"
                android:layout_width="fill_parent"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:text="1234567890123456789"
                android:textAlignment="gravity" />
        </LinearLayout>

        <LinearLayout
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_below="@id/layout_cradno"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">
            <TextView
                android:textSize="24sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Amount："
                />

            <TextView
                android:id="@+id/tv_amount"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingBottom="10dp"
                android:paddingLeft="6dp"
                android:paddingTop="10dp"
                android:text="99999.09"
                android:textAlignment="gravity"
                android:textColor="#f53c08"
                android:textSize="26sp" />
        </LinearLayout>
        <Button
            android:layout_margin="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:id="@+id/btn_confirm"
            android:text="请确认卡号"
            android:enabled="true" />

    </LinearLayout>


</RelativeLayout>
